<main>
    <div class="container">
        <h3>Add Category</h3>
        {{#each errorMessages}}
        <div class="error-message">{{this}}</div>
        {{/each}}
        <hr>
        <form method="post" action="/manage/category/add" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="itemName">Category Name</label>
                        <input class="form-control" id="itemName" name="itemName" type="text" value="{{catName}}">
                    </div>
                    <div class="form-group">
                        <label for="imageFile">Image File (e.g.: jpeg, jpg, png, gif)</label>
                        <input class="form-control" id="imageFile" name="imageFile" type="file" value="{{catImage}}">
                    </div>
                </div>
            </div>
            <hr>
            <input type="submit" class="btn btn-secondary float-right" value="Add Category"><br><br><br>
        </form>
    </div>
</main>