<main>
    <div class="container">
        <h3>Update Drink</h3>
        {{#each errorMessages}}
        <div class="error-message">{{this}}</div>
        {{/each}}
        <hr>
        <form method="post" action="/manage/drink/update" id="drinkUpdateForm" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="itemName">Drink Name</label>
                                <input class="form-control" id="itemName" name="itemName" type="text"
                                    value="{{drinkName}}">
                            </div>
                            <div class="col-sm-6 d-flex align-items-end">
                                <div class="thumbnail">
                                    <img src="/images/{{drinkImage}}" alt={{drinkName}} class="drink-image">
                                    <input type="hidden" name="drinkImage" value="{{drinkImage}}" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="drinkPrice">Price</label>
                        <input class="form-control" id="drinkPrice" name="drinkPrice" type="text"
                            value="{{drinkPrice}}">
                    </div>
                    <div class="form-group">
                        <label for="drinkDesc">Description</label>
                        <input class="form-control" id="drinkDesc" name="drinkDesc" type="text" value="{{drinkDesc}}">
                    </div>
                    <div class="form-group">
                        <label for="drinkCat">Category</label>
                        <select class="custom-select" name="drinkCat" id="drinkCat">
                            <option value="">Choose...</option>
                            {{#if categories}}
                            {{#each categories}}
                            <option value={{name}} {{#if selected}} selected {{/if}}>{{name}}</option>
                            {{/each}}
                            {{/if}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="drinkBest">Bestseller</label>
                        <select class="custom-select" name="drinkBest" id="drinkBest">
                            <option value="true" {{#if topdrink}} selected {{/if}}>Yes</option>
                            <option value="false" {{#unless topdrink}} selected {{/unless}}>No</option>
                        </select>
                    </div>

                    <div class="form-group" id="imageUploadBox" style="display: block;">
                        <label for="imageFile">New Image (e.g.: jpeg, jpg, png, gif)</label>
                        <input class="form-control" id="imageFile" name="imageFile" type="file" value="{{drinkImage}}">
                    </div>
                </div>
            </div>
            <hr>
            <input type="submit" class="btn btn-secondary float-right" value="Update Drink"><br><br><br>
            <input type="hidden" name="drinkId" value="{{drinkId}}" />
        </form>
    </div>
</main>