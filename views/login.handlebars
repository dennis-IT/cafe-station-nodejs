<main>
    <div class="login-container">
        <div class="login-form">
            <h1><i class="fas fa-sign-in-alt"></i> Login</h1>

            {{#each errorMessages}}
            <div class="error-message">{{this}}</div>
            {{/each}}

            <form action="/users/login" method="POST" novalidate>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter Email" value="{{email}}" />

                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter Password"
                    value="{{password}}" />

                <button class="form-btn" type="submit" name="login">Sign in</button>
            </form>
        </div>
    </div>
</main>