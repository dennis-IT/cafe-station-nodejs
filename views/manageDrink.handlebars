<main>
    <div class="container">
        <h3>List of Drinks
            <button class="btn btn-secondary float-right text-white font-weight-bold"
                onclick="window.location.href='/manage/drink/add'">Add New</button>
        </h3>
        <hr>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="">Image</th>
                        <th style="">Name</th>
                        <th style="">Price</th>
                        <th style="">Description</th>
                        <th style="">Category</th>
                        <th style="">Bestseller</th>
                        <th style=""></th>
                    </tr>
                </thead>
                <tbody>
                    {{#if drinks}}
                    {{#each drinks}}
                    <tr>
                        <td class="td-image"><img src="/images/{{imgPath}}" alt={{name}} class="drink-image"></td>
                        <td class="text-capitalize">{{name}}</td>
                        <td>{{price}}</td>
                        <td>{{description}}</td>
                        <td>{{category}}</td>
                        <td>{{bestseller}}</td>
                        <td class="space-shrink">
                            <button class="btn btn-danger float-left text-white font-weight-bold btn-sm"
                                onclick="window.location.href='/manage/drink/delete/{{url}}'">Remove</button>
                        </td>
                        <td class="space-shrink">
                            <button class="btn btn-warning float-left text-white font-weight-bold btn-sm"
                                onclick="window.location.href='/manage/drink/update/{{url}}'">Update</button>
                        </td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
            {{#unless drinks}}
            <div class="col-md-12 text-center">No result</div>
            {{/unless}}
        </div>
    </div>
</main>