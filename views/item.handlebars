<main>
    <div class="item-container">
        {{#each errorMessages}}
        <div class="error-message">{{this}}</div>
        {{/each}}

        {{#each drinks}}
        <div class="item-description">
            <div class="item-image">
                <img src="/images/{{imgPath}}" alt="{{name}}">
            </div>
            <div class="item-info">
                <p class="title">{{name}}</p>
                <p class="price">${{price}}</p>
                <p class="intro">{{description}}</p>
                <p class="category">Category: {{category}}</p>
                <form method="POST" action="/menu/{{category}}/{{url}}" id="cart-submit" novalidate>
                    <div class="row">
                        <div class="col-sm-12">
                            <input id="orderedQuantity" name="itemQty" type="number" min="1" value="1">
                            <button type="submit" class="btn btn-secondary text-white ml-3">Add to order</button>

                            <input type="hidden" name="itemName" value="{{name}}" />
                            <input type="hidden" name="itemCat" value="{{category}}" />
                            <input type="hidden" name="itemUrl" value="{{url}}" />
                            <input type="hidden" name="itemPrice" value="{{price}}" />
                            <input type="hidden" name="itemImg" value="{{imgPath}}" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</main>