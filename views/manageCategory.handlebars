<main>
    <div class="container">
        <h3>List of Categories
            <a href="/manage/category/add" class="btn btn-secondary float-right text-white font-weight-bold">Add New
                Category</a>
        </h3>
        <hr>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 20%;">Image</th>
                        <th style="width: 40%;">Name</th>
                        <th style="width: 40%;"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#if categories}}
                    {{#each categories}}
                    <tr>
                        <td class="td-image"><img src="/images/{{imgPath}}" alt={{name}} class="category-image"></td>
                        <td class="text-capitalize">{{name}}</td>
                        <td><a href="/manage/category/delete/{{name}}"
                                class="btn btn-danger float-left text-white font-weight-bold">Remove</a></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
            {{#unless categories}}
            <div class="col-md-12 text-center">No result</div>
            {{/unless}}
        </div>
    </div>
</main>